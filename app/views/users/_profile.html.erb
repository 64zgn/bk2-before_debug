<table class="table">
    <tr>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
    </tr>
    <tr>
        <th>name</th>
        <th>
            <%= user.name %>
        </th>
    </tr>
    <tr>
        <th>introduction</th>
        <th>
            <%= user.introduction %>
        </th>
    </tr>
    <tr>
        <th>フォローしている</th>
        <th>
            <%= link_to "#{user.followings.count} フォロー", followings_user_path(user) %>
        </th>
    </tr>
    <tr>
        <th>フォローされている</th>
        <th>
            <%= link_to "#{user.followers.count} フォロー", followers_user_path(user) %>
        </th>
    </tr>
</table>
<div class="row">
    <% if @user == current_user %>
    <%= link_to '', edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% else %>
    <%= link_to '', user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% end %>
</div>